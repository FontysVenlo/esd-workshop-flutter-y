{
  "name": "Flutter Web Development",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "aaron-bond.better-comments"
      ],
      "settings": {
        "dart.flutterSdkPath": "/usr/local/flutter",
        "dart.sdkPath": "/usr/local/flutter/bin/cache/dart-sdk",
        "flutter.sdkPath": "/usr/local/flutter",
        "dart.enableSdkFormatter": true,
        "dart.lineLength": 120,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll": true
        }
      }
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Flutter Web App",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /workspace && flutter doctor && flutter config --enable-web",
  "remoteUser": "vscode"
}